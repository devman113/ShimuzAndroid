<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theshmuz.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:name="com.theshmuz.app.Shmuz"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher3"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.theshmuz.app.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.theshmuz.app.UpdateService" />
        <service android:name="com.theshmuz.app.streamer.Streamer" />

        <activity
            android:name="com.theshmuz.app.activity.SeriesActivity"
            android:label="@string/title_activity_series"
            android:parentActivityName="com.theshmuz.app.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.theshmuz.app.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.theshmuz.app.activity.SearchActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_search"
            android:parentActivityName="com.theshmuz.app.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".activity.SearchActivity"/>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.theshmuz.app.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.theshmuz.app.activity.DetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.theshmuz.app.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.theshmuz.app.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.theshmuz.app.activity.InternalLink"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_link"
            android:parentActivityName="com.theshmuz.app.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.theshmuz.app.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.theshmuz.app.activity.PrintDialogActivity"
            android:label="@string/title_activity_print" />
        <activity
            android:name="com.theshmuz.app.activity.AccountActivity"
            android:label="@string/title_activity_signin">
        </activity>

        <!-- Used for install referral measurement -->
        <service android:name="com.google.analytics.tracking.android.CampaignTrackingService" />

        <receiver
            android:name="com.google.analytics.tracking.android.CampaignTrackingReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>