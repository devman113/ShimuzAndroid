<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/shmuz_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="2dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/shmuz_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/shmuz_lock"
        android:layout_toRightOf="@+id/shmuz_image"
        android:textColor="@android:color/primary_text_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/shmuz_early_tease"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shmuz_title"
        android:layout_toRightOf="@+id/shmuz_image"
        android:text="EARLY ACCESS"
        android:textColor="@color/ics_orange_dark"
        />

    <ImageView
        android:id="@+id/shmuz_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_lock" />

</RelativeLayout>